{% extends 'base.html.twig' %}

{% block title %}
	{{ category.name }}
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<a href="{{ path('app_category_index') }}">retour Ã  la liste</a>
		<h1>{{ category.name }}</h1>
		<p>Description :
		</p>
		<p>{{ category.description }}</p>
		<ul>
			{% for film in category.films %}
				<li>
					<a href="{{ path('app_film_show', {'slug': film.slug}) }}">{{ film.name }}</a>
				</li>
			{% endfor %}
		</ul>

	</div>
{% endblock %}
