{% extends 'base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<div class="flex">
			<h1>Liste des catégories</h1>
            <a href="{{ path('app_category_new') }}">Ajouter une catégorie</a>
        </div>

		{% if categories is empty %}
			Aucune catégorie
		{% else %}
			<table>
				{% for category in categories %}
					<tr>
						<td>{{ category.name }}</td>
						<td>
							<a href="{{ path('app_category_show', {'slug': category.slug}) }}">voir</a>
                            <a href="{{ path('app_category_edit', {'slug': category.slug}) }}">modifier</a>
                            <a href="{{ path('app_category_delete', {'slug': category.slug}) }}" onclick="if(!confirm('Are you sure?')) event.preventDefault()">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</table>
		{% endif %}
	</div>
{% endblock %}
