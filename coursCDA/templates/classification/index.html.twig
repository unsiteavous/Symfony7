{% extends 'base.html.twig' %}

{% block title %}Classifications
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<div class="flex">
			<h1>Liste des classifications</h1>
            <a href="{{ path('app_classification_new') }}">Ajouter une classification</a>
        </div>

		{% if classifications is empty %}
			Aucune classification
		{% else %}
			<table>
				{% for classification in classifications %}
					<tr>
						<td>{{ classification.name }}</td>
						<td>
							<a href="{{ path('app_classification_show', {'id': classification.id}) }}">voir</a>
                            <a href="{{ path('app_classification_edit', {'id': classification.id}) }}">modifier</a>
                            <a href="{{ path('app_classification_delete', {'id': classification.id}) }}" onclick="if(!confirm('Are you sure?')) event.preventDefault()">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</table>
		{% endif %}
	</div>
{% endblock %}
