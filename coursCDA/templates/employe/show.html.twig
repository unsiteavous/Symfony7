{% extends 'base.html.twig' %}

{% block title %}Employe{% endblock %}

{% block body %}
    <h1>Employe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employe.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employe.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ employe.roles ? employe.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ employe.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ employe.name }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ employe.firstName }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ employe.tel }}</td>
            </tr>
            <tr>
                <th>ArrivalDate</th>
                <td>{{ employe.arrivalDate ? employe.arrivalDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_employe_index') }}">back to list</a>

    <a href="{{ path('app_employe_edit', {'id': employe.id}) }}">edit</a>

    {{ include('employe/_delete_form.html.twig') }}
{% endblock %}
